<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#89fffd9f">

    <GridLayout
        android:layout_width="389dp"
        android:layout_height="44dp"
        android:layout_weight="0.43">

        <EditText
            android:layout_width="190dp"
            android:layout_height="71dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/Input"
            android:layout_row="0"
            android:layout_column="3" />


        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Convert"
            android:id="@+id/button28"
            android:layout_row="0"
            android:layout_column="7"
            android:textColor="#ff5492ff"
            android:onClick="buttonClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:id="@+id/listView"
            android:layout_row="0"
            android:layout_column="14"
            android:textColor="#ff8d383b"
            android:onClick="buttonClicked" />

        <TextView
            android:layout_width="207dp"
            android:layout_height="match_parent"
            android:text="From"
            android:id="@+id/textView3"
            android:layout_row="2"
            android:layout_column="3"
            android:textSize="18dp"
            android:textColor="#ff556b86" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To"
            android:id="@+id/textView"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_columnSpan="5"
            android:textSize="18dp"
            android:textColor="#ff9f5441" />

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="38dp"
            android:layout_row="2"
            android:layout_column="14">

        </GridLayout>

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="New Text"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal" />

    <GridLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.39">


        <RadioGroup
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:id="@+id/From">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thai Bath ,THB"
            android:id="@+id/FrTHB"
            android:layout_row="0"
            android:layout_column="0"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Viet Nam ,VND  "
            android:id="@+id/FrVND"
            android:layout_row="1"
            android:layout_column="0"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Malaysian ,MYR"
            android:id="@+id/FrMYR"
            android:layout_row="2"
            android:layout_column="0"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Singapore ,SGD"
            android:id="@+id/FrSGD"
            android:layout_row="3"
            android:layout_column="0"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indonesian ,IDR"
            android:id="@+id/FrIDR"
            android:layout_row="4"
            android:layout_column="0"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lao Kip , LAK"
            android:id="@+id/FrLAK"
            android:layout_row="5"
            android:layout_column="0"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambodian ,KHR"
            android:id="@+id/FrKHR"
            android:layout_row="6"
            android:layout_column="0"
            android:checked="false" />

        <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Myanmar ,MMK"
        android:id="@+id/FrMMK"
        android:layout_row="7"
        android:layout_column="0"
        android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brunei ,BND"
            android:id="@+id/FrBND"
            android:layout_row="8"
            android:layout_column="0"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Philippine ,PHP"
            android:id="@+id/FrPHP"
            android:layout_row="9"
            android:layout_column="0"
            android:checked="false" />

        </RadioGroup>
        -------------------------------------------


        <RadioGroup
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:id="@+id/To">

            <RadioButton
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Thai Bath ,THB"
                android:id="@+id/ToTHB"
                android:layout_row="0"
                android:layout_column="8"
                android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Viet Nam ,VND"
            android:id="@+id/ToVND"
            android:layout_row="1"
            android:layout_column="8"
            android:checked="false" />


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Malaysian ,MYR"
            android:id="@+id/ToMYR"
            android:layout_row="2"
            android:layout_column="8"
            android:checked="false" />


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIngapore ,SGD"
            android:id="@+id/ToSGD"
            android:layout_row="3"
            android:layout_column="8"
            android:checked="false" />



        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indonesian ,IDR"
            android:id="@+id/ToIDR"
            android:layout_row="4"
            android:layout_column="8"
            android:checked="false" />



        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lao Kip , LAK"
            android:id="@+id/ToLAK"
            android:layout_row="5"
            android:layout_column="8"
            android:checked="false" />



        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambodian ,KHR"
            android:id="@+id/ToKHR"
            android:layout_row="6"
            android:layout_column="8"
            android:checked="false" />



        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Myanmar ,MMK"
            android:id="@+id/ToMMK"
            android:layout_row="7"
            android:layout_column="8"
            android:checked="false" />



        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brunei ,BND"
            android:id="@+id/ToBND"
            android:layout_row="8"
            android:layout_column="8"
            android:checked="false" />





        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Philippine ,PHP"
            android:id="@+id/ToPHP"
            android:layout_row="9"
            android:layout_column="8"
            android:checked="false"
            android:enabled="true" />
        </RadioGroup>
    </GridLayout>

    <EditText
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvOutput"
        android:layout_gravity="center_horizontal"
        android:textColorLink="#fff0ff31"
        android:background="#96ffaa1f"
        android:layout_weight="0.16"
        android:textSize="20dp"
        android:textColor="#ffff372e" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="63dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:id="@+id/his"
            android:layout_row="1"
            android:layout_column="1"
            android:textColor="#ff8f64ff"
            android:onClick="homecal"
            android:textSize="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculator"
            android:id="@+id/calculator"
            android:layout_row="1"
            android:layout_column="2"
            android:textColor="#ffb653ff"
            android:focusableInTouchMode="false"
            android:onClick="homecal"
            android:textSize="20dp" />
    </GridLayout>

</LinearLayout>