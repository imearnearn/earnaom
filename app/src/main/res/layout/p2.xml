<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/ttt">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05"></LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:text="0"
        android:id="@+id/shownum"
        android:gravity="center_vertical|right"
        android:textColor="#ff89cfff"
        android:background="#92e3c0cb"
        android:layout_weight="0.39"
        android:textSize="30dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.13">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:gravity="center">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"></LinearLayout>

            <Button
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:text="HK$"
                android:id="@+id/hk"
                android:background="#ffd4868c"
                android:onClick="hkclicked" />

            <Button
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:text="KRW"
                android:id="@+id/kr"
                android:background="#ff56ce7e"
                android:onClick="krclicked" />

            <Button
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:text="CNY"
                android:id="@+id/cn"
                android:layout_weight="0.36"
                android:background="#ffbac73d"
                android:onClick="cnlicked" />

            <Button
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:text="JPY"
                android:id="@+id/jp"
                android:background="#ffff3030"
                android:onClick="jpclicked" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/d7"
            android:textStyle="bold"
            android:onClick="digitClicked"
            android:background="#7c90fff1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/d8"
            android:textStyle="bold"
            android:onClick="digitClicked"
            android:background="#66fed7ff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:id="@+id/d9"
            android:textStyle="bold"
            android:onClick="digitClicked"
            android:background="#66f8ff17" />

        <Button
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/plus"
            android:layout_weight="0.18"
            android:onClick="operatorClicked"
            android:background="#ff6af6ff" />

    </LinearLayout>

    <TableLayout
        android:layout_width="19dp"
        android:layout_height="wrap_content"></TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/d4"
            android:textStyle="bold"
            android:onClick="digitClicked"
            android:background="#66ff6ee2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/d5"
            android:textStyle="bold"
            android:onClick="digitClicked"
            android:background="#668b4cff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/d6"
            android:textStyle="bold"
            android:onClick="digitClicked"
            android:background="#6786d7ff" />

        <Button
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/minus"
            android:layout_weight="0.21"
            android:onClick="operatorClicked"
            android:background="#ff81ff44" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/d1"
            android:textStyle="bold"
            android:onClick="digitClicked"
            android:background="#66ffb1d9" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/d2"
            android:textStyle="bold"
            android:onClick="digitClicked"
            android:background="#664affef" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/d3"
            android:textStyle="bold"
            android:onClick="digitClicked"
            android:background="#6432ff3a" />

        <Button
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:text="*"
            android:id="@+id/mul"
            android:layout_weight="0.13"
            android:onClick="operatorClicked"
            android:background="#ffffee19" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/d0"
            android:textStyle="bold"
            android:layout_weight="0.60"
            android:onClick="digitClicked"
            android:background="#67ff402e" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:id="@+id/equal"
            android:onClick="equalClicked"
            android:background="#664be8ff" />

        <Button
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:text="/"
            android:id="@+id/div"
            android:onClick="operatorClicked"
            android:background="#ff31ffa5"
            android:layout_weight="0.07" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical|right"
        android:weightSum="1"
        android:layout_weight="0.19">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AC"
            android:id="@+id/ac"
            android:layout_weight="0.64"
            android:onClick="ACClicked"
            android:background="#77ff016e"
            android:textSize="20dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="right"
        android:layout_weight="0.05" />

    <Button
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:text="Currency"
        android:id="@+id/currency"
        android:layout_row="1"
        android:layout_column="3"
        android:background="#7db5732e"
        android:onClick="hiscur"
        android:layout_weight="0.05"
        android:layout_gravity="right"
        android:textColor="#ff0b5560"
        android:textSize="20dp" />

</LinearLayout>